= form_for @show do |f|
  -if @show.errors.any?
    #error_explanation
      %h2= "#{pluralize(@show.errors.count, "error")} prohibited this show from being saved:"
      %ul
        - @show.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :season
    = f.text_field :season
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'
