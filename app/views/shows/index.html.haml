%h1= "Listing shows for the #{working_season_name} season"

%table.gridtable
  %tr
    %th Name
    %th Company
    %th Type
    %th

  - @shows.each do |show|
    %tr
      %td= show.name
      %td= show.member_company.name
      %td= show.type
      %td
        = link_to 'Show', show
        \|
        = link_to 'Edit', edit_show_path(show)
        \|
        = link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Show', new_show_path
