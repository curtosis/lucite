= semantic_form_for @season do |f|
  -if @season.errors.any?
    #error_explanation
      %h2= "#{pluralize(@season.errors.count, "error")} prohibited this season from being saved:"
      %ul
        - @season.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_date
    = f.date_select :start_date, :default => { :day => 1, :month => 1 }
  .field
    = f.label :end_date
    = f.date_select :end_date, :default => { :day => 31, :month => 12 }
  .actions
    = f.submit 'Save'
