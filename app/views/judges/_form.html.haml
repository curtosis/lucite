= form_for @judge do |f|
  -if @judge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@judge.errors.count, "error")} prohibited this judge from being saved:"
      %ul
        - @judge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :company
    = f.collection_select :company, MemberCompany.all, :code, :name 
  .actions
    = f.submit 'Save'
